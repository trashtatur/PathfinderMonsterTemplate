{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" },{ "name": "css-module-types" }],
    "module": "commonjs",
    "outDir": "build",
    "allowJs": true,
    "jsx": "react",
    "lib": ["es2016","dom"],
    "target": "es6",
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/global.d.ts",
    "src/view/components/componentTypes.d.ts",
    "build/cssTypes/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}